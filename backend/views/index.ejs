    <style>
/* Basic Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', -apple-system, BlinkMacSystemFont, sans-serif;
}

/* Define Color Palette */
:root {
    --primary: #ff6f61;
    --primary-dark: #e63946;
    --secondary: #fdf0e9;
    --accent: #48cae4;
    --text-dark: #2d3436;
    --text-light: #636e72;
    --background: #ffffff;
    --shadow: rgba(0, 0, 0, 0.15);
    --glass-bg: rgba(255, 255, 255, 0.85);
}

/* Navbar */
.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 4rem;
    background: linear-gradient(135deg, var(--glass-bg), rgba(255, 255, 255, 0.95));
    backdrop-filter: blur(12px);
    box-shadow: 0 6px 20px var(--shadow);
    position: sticky;
    top: 0;
    z-index: 1000;
    animation: slideIn 0.5s ease-out;
}

@keyframes slideIn {
    from { transform: translateY(-100%); }
    to { transform: translateY(0); }
}

.logo {
    display: flex;
    align-items: center;
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--primary);
    text-transform: uppercase;
    letter-spacing: 1px;
}

.logo img {
    width: 3rem;
    margin-right: 1rem;
    transition: transform 0.4s ease;
}

.logo img:hover {
    transform: scale(1.2) rotate(15deg);
}

.nav-links {
    list-style: none;
    display: flex;
    gap: 2.5rem;
}

.nav-links li {
    position: relative;
}

.nav-links a {
    text-decoration: none;
    color: var(--text-dark);
    font-size: 1.2rem;
    font-weight: 600;
    transition: color 0.3s ease, transform 0.3s ease;
}

.nav-links a:hover {
    color: var(--primary);
    transform: translateY(-2px);
}

.nav-links a::after {
    content: '';
    position: absolute;
    width: 0;
    height: 3px;
    bottom: -6px;
    left: 0;
    background: var(--primary);
    transition: width 0.4s ease;
}

.nav-links a:hover::after {
    width: 100%;
}

.login-btn {
    background: var(--primary);
    padding: 0.8rem 2rem;
    border-radius: 50px;
    color: white;
    font-weight: 700;
    box-shadow: 0 4px 15px rgba(255, 111, 97, 0.4);
    transition: all 0.3s ease;
}

.login-btn:hover {
    background: var(--primary-dark);
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(230, 57, 70, 0.5);
}

/* Hero Section */
.hero {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 6rem 4rem;
    background: linear-gradient(45deg, var(--secondary) 20%, var(--background) 80%);
    gap: 4rem;
    position: relative;
    overflow: hidden;
}

.hero::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 111, 97, 0.1) 10%, transparent 70%);
    animation: pulse 10s infinite ease-in-out;
    pointer-events: none;
}

@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
}

.hero-content {
    max-width: 50%;
    animation: fadeInLeft 1s ease-out;
}

@keyframes fadeInLeft {
    from { opacity: 0; transform: translateX(-50px); }
    to { opacity: 1; transform: translateX(0); }
}

.hero-content h1 {
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.1;
    color: var(--text-dark);
    text-shadow: 0 2px 5px var(--shadow);
}

.highlight {
    color: var(--primary);
    background: linear-gradient(180deg, transparent 60%, var(--accent) 60%);
    padding: 0 5px;
}

.hero-content p {
    color: var(--text-light);
    font-size: 1.5rem;
    line-height: 1.7;
    margin: 1.5rem 0;
}

.cta-btn {
    display: inline-block;
    background: var(--primary);
    color: white;
    padding: 1.2rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 700;
    box-shadow: 0 5px 20px rgba(255, 111, 97, 0.5);
    transition: all 0.3s ease;
}

.cta-btn:hover {
    background: var(--primary-dark);
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(230, 57, 70, 0.6);
}

.hero-image img {
    width: 100%;
    max-width: 30rem;
    border-radius: 20px;
    box-shadow: 0 10px 30px var(--shadow);
    animation: float 3s ease-in-out infinite;
}

@keyframes float {
    0% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
    100% { transform: translateY(0); }
}

/* Features Section */
.features {
    text-align: center;
    padding: 6rem 4rem;
    background: var(--background);
}

.features h2 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 3rem;
    color: var(--text-dark);
    position: relative;
}

.features h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 4px;
    background: var(--primary);
    border-radius: 2px;
}

.features-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
    gap: 2.5rem;
}

.feature-box {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    padding: 2.5rem;
    border-radius: 20px;
    box-shadow: 0 10px 20px var(--shadow);
    text-align: left;
    transition: all 0.4s ease;
}

.feature-box:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
}

.feature-box img {
    width: 3rem;
    margin-bottom: 1.5rem;
    filter: drop-shadow(0 3px 5px var(--shadow));
}

.feature-box h3 {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--primary);
}

.feature-box p {
    color: var(--text-light);
    font-size: 1.1rem;
    margin-top: 1rem;
}

.coming-soon {
    display: inline-block;
    background: var(--secondary);
    color: var(--primary);
    padding: 0.6rem 1.2rem;
    border-radius: 25px;
    font-size: 0.9rem;
    margin-top: 0.75rem;
    font-weight: 600;
    box-shadow: 0 3px 10px var(--shadow);
}

/* Footer Section */
.footer {
    text-align: center;
    padding: 5rem 2rem;
    background: linear-gradient(135deg, var(--secondary), var(--background));
    position: relative;
}

.footer-content {
    max-width: 50rem;
    margin: auto;
}

.profile-pic {
    width: 15rem;
    height: 15rem;
    border-radius: 50%;
    margin-bottom: 2rem;
    box-shadow: 0 8px 20px var(--shadow);
    transition: transform 0.4s ease;
}

.profile-pic:hover {
    transform: scale(1.15) rotate(5deg);
}

.footer-content h3 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--text-dark);
}

.footer-content p {
    color: var(--text-light);
    font-size: 1.2rem;
    line-height: 1.8;
}

.social-links {
    margin: 2rem 0;
}

.social-icon img {
    width: 2.5rem;
    margin: 0 1.2rem;
    transition: all 0.3s ease;
}

.social-icon img:hover {
    transform: scale(1.4) rotate(10deg);
    filter: brightness(1.2);
}

.copyright {
    font-size: 1rem;
    color: var(--text-light);
    margin-top: 2rem;
}

/* Responsive Design */
@media (max-width: 1024px) {
    .hero {
        flex-direction: column;
        text-align: center;
        padding: 4rem 2rem;
    }

    .hero-content {
        max-width: 100%;
    }

    .hero-content h1 {
        font-size: 3rem;
    }

    .hero-image img {
        max-width: 22rem;
        margin-top: 3rem;
    }

    .features {
        padding: 4rem 2rem;
    }

    .navbar {
        padding: 1.2rem 2rem;
    }
}

@media (max-width: 600px) {
    .navbar {
        padding: 1rem;
        flex-direction: column;
        gap: 1.5rem;
    }

    .nav-links {
        flex-direction: column;
        gap: 1.2rem;
    }

    .hero {
        padding: 3rem 1rem;
    }

    .hero-content h1 {
        font-size: 2rem;
    }

    .hero-content p {
        font-size: 1.1rem;
    }

    .cta-btn {
        padding: 0.9rem 2rem;
        font-size: 1rem;
    }

    .hero-image img {
        max-width: 16rem;
    }

    .features {
        padding: 3rem 1rem;
    }

    .features h2 {
        font-size: 2rem;
    }

    .feature-box {
        padding: 2rem;
    }

    .footer {
        padding: 3rem 1rem;
    }

    .profile-pic {
        width: 5rem;
        height: 5rem;
    }

    .footer-content h3 {
        font-size: 1.5rem;
    }

    .footer-content p {
        font-size: 1rem;
    }

    .social-icon img {
        width: 2rem;
        margin: 0 0.8rem;
    }
}
    </style>
